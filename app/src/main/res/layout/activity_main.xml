<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.134"
            android:text="이름을 입력하세요"/>
    <TextView
            android:id="@+id/nameInput"
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.337" app:layout_constraintVertical_bias="0.11"/>
    <TextView
            android:id="@+id/question1"
            android:text="질문 1) 영어로 대화 가능합니까?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.326" app:layout_constraintVertical_bias="0.261"/>
    <RadioGroup
            android:layout_width="332dp"
            android:layout_height="59dp"
            android:orientation="horizontal"
            android:id="@+id/radioGroup" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.294">
        <RadioButton
                android:text="예"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton"/>
        <RadioButton
                android:text="아니오"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton2"/>
        <RadioButton
                android:text="잘 모르겠습니다"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton3"/>
    </RadioGroup>
    <TextView
            android:id="@+id/question2"
            android:text="질문 2) 영어 외에 관심 있는 언어는?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.343" app:layout_constraintVertical_bias="0.415"/>
    <TextView
            android:id="@+id/question3"
            android:text="질문 3) 당신의 의견을 작성해주세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.342" app:layout_constraintVertical_bias="0.548"/>
    <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.341" app:layout_constraintVertical_bias="0.585"
            android:text="의견을 작성해주세요."/>
    <TextView
            android:id="@+id/question4"
            android:text="질문 4) 당신의 연령대는?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.293" app:layout_constraintVertical_bias="0.678"/>
    <Spinner
            android:id="@+id/spinner"
            android:layout_width="316dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.471"
            app:layout_constraintVertical_bias="0.739"/>
    <Button
            android:text="제출하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.492" app:layout_constraintVertical_bias="0.924"/>
    <LinearLayout
            android:id="@+id/checkGroup"
            android:orientation="horizontal"
            android:layout_width="255dp"
            android:layout_height="62dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.385" app:layout_constraintVertical_bias="0.456">
        <CheckBox
                android:text="중국어"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox"
        />
        <CheckBox
                android:text="일본어"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox2"
        />
        <CheckBox
                android:text="그 외"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox3"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>